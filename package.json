{
  "name": "friendship-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:migrate:prod": "yarn db:migrate:prod && yarn db:seed && yarn start:prod",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "yarn lint --fix",
    "test": "env-cmd -f .env.test yarn prisma migrate reset --force && env-cmd -f .env.test jest --runInBand --verbose",
    "test:watch": "yarn test --watch",
    "test:cov": "yarn test --coverage",
    "test:debug": "env-cmd -f .env.test yarn prisma migrate reset --force && node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "yarn test --config ./jest-e2e.config.json",
    "test:e2e:watch": "yarn test --watch --config ./jest-e2e.config.json",
    "test:e2e:cov": "yarn test --coverage --config ./jest-e2e.config.json",
    "db:generate": "prisma generate",
    "db:migrate:dev": "prisma migrate dev --preview-feature",
    "db:migrate:prod": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset --preview-feature",
    "db:seed": "prisma db seed"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.2.0",
    "@prisma/client": "^5.8.1",
    "case-anything": "^2.1.13",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@leandromatos/eslint-config": "^2.2.10",
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.2",
    "prisma": "^5.8.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3"
  },
  "prisma": {
    "schema": "./src/database/clients/prisma/schema.prisma",
    "seed": "ts-node -r tsconfig-paths/register --transpile-only  ./src/database/clients/prisma/seeds/database.seed.ts"
  }
}
